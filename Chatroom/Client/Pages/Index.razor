@page "/"

<div class="login">
    <!--if just use "@bind", then have to hit enter twice-->
    <input  placeholder="Username"
            @bind-value="usernameInput" @bind-value:event="oninput"
            @onkeydown="@(e => { if (e.Code == "Enter") GotoChatroom(); })"
    />
    <br />
    <button @onclick="GotoChatroom">Enter</button>
</div>
